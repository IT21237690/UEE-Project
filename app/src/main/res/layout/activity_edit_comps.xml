<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BCBCBC"
    android:backgroundTint="#BCBCBC"
    android:foregroundTint="#000000">>


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-16dp" />

    <EditText
        android:id="@+id/edit_comp_title_edit_text"
        android:layout_width="280dp"
        android:layout_height="56dp"

        android:background="@drawable/rounded_edittext_background"
        android:drawablePadding="10dp"
        android:hint="Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <EditText
        android:id="@+id/edit_comp_desc_edit_text"
        android:layout_width="280dp"
        android:layout_height="56dp"


        android:drawablePadding="10dp"
        android:hint="Description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582"
        android:background="@drawable/rounded_edittext_background"/>

    <EditText
        android:id="@+id/edit_comp_seller_edit_text"
        android:layout_width="280dp"
        android:layout_height="56dp"

        android:drawablePadding="10dp"
        android:hint="Seller name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68"
        android:background="@drawable/rounded_edittext_background"/>

    <EditText
        android:id="@+id/edit_comp_category_edit_text"
        android:layout_width="280dp"
        android:layout_height="56dp"

        android:drawablePadding="10dp"
        android:hint="Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782"
        android:background="@drawable/rounded_edittext_background"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="272dp"
        android:layout_height="72dp"
        android:layout_marginEnd="65dp"
        android:text="Edit Complaint"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="98dp" />
