<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCBCBC">

    <ImageView
        android:id="@+id/home"
        android:layout_width="78dp"
        android:layout_height="68dp"
        android:src="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintVertical_bias="0.057" />

    <ImageView
        android:id="@+id/user_male"
        android:layout_width="85dp"
        android:layout_height="78dp"
        android:src="@drawable/user_male"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/add_item_to_auction"
        android:layout_width="324dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="@string/add_item_to_auction_string"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/add_item_to_auction_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.132" />

    <EditText
        android:id="@+id/editItemNameEditText"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Item Name"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_to_auction"
        app:layout_constraintVertical_bias="0.301" />

    <EditText
        android:id="@+id/editDescriptionEditText"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Description"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_to_auction"
        app:layout_constraintVertical_bias="0.426" />

    <EditText
        android:id="@+id/editPriceEditText"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:hint="Price"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_bg"
        app:layout_constraintTop_toBottomOf="@+id/add_item_to_auction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.555" />

    <EditText
        android:id="@+id/editTextEndTime"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:hint="End Time"
        android:padding="12dp"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:background="@drawable/rounded_edittext_bg"
        app:layout_constraintTop_toBottomOf="@+id/add_item_to_auction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.809" />

    <EditText
        android:id="@+id/editTextStartTime"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_edittext_bg"
        android:clickable="true"
        android:focusable="false"
        android:hint="Start Time"
        android:inputType="none"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_to_auction"
        app:layout_constraintVertical_bias="0.681" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:text="Add Item"
        android:textSize="20sp"
        android:textColor="@color/button_text_black"
        android:backgroundTint="@color/button_yellow"
        app:layout_constraintTop_toBottomOf="@+id/editTextEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/add_image"
        app:layout_constraintTop_toBottomOf="@+id/add_item_to_auction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editItemNameEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>
